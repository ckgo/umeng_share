<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnlogin_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QQ登陆" />

    <Button
        android:id="@+id/btnlogin_sina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新浪登陆" />

    <Button
        android:id="@+id/btnlogin_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信登陆" />


    <Button
        android:id="@+id/btnshare_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="qq分享" />

    <Button
        android:id="@+id/btnshare_qzone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="qq空间分享" />

    <Button
        android:id="@+id/btnshare_sina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新浪微博分享" />

    <Button
        android:id="@+id/btnshare_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信好友分享" />

    <Button
        android:id="@+id/btnshare_pyq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信朋友圈分享" />
</LinearLayout>